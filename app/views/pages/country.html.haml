%link{:href => "//fonts.googleapis.com/css?family=Roboto+Condensed:300,400,700", :rel => "stylesheet", :type => "text/css"}
%link{:href => "//fonts.googleapis.com/css?family=Roboto:100,300,400,700,900", :rel => "stylesheet", :type => "text/css"}
.container
  .header
    = image_tag "img/logo.png"
  %section.call-to-action.with-borders.button-centered.mb-xl
    .call-to-action-content
      %h3
        StuLife is an
        %strong higher education platform
        as your guide to pursue you
        %strong studies
        overseas!
      %p
        Get started by selecting the
        %strong Country
        you wish to study in
    .call-to-action-btn
      .col-md-4.col-md-offset-4.text-center.mb-lg
        = select_tag :country, options_for_select(Country.all.sort_by { |x| x.name }.collect{ |x| [x.name, x.name.downcase]}, ["malaysia"]), id: "country-field"
        -#%span.arrow.hlb.hidden-xs.hidden-sm.hidden-md.appear-animation.rotateInUpLeft.appear-animation-visible{"data-appear-animation" => "rotateInUpLeft", :style => "top: -12px;"}
  .row
    .col-md-4
      .featured-box.featured-box-secondary.featured-box-effect-1.modules
        %a#house-button{href: "javascript:;"}
          .box-content
            %i.icon-featured.fa.fa-home
            %h4.text-uppercase House
            %p Wondering where is the best place place to live in near your university, check out your options here!
    .col-md-4
      .featured-box.featured-box-primary.featured-box-effect-1.modules
        %a#university-button{href: "javascript:;"}
          .box-content
            %i.icon-featured.fa.fa-book
            %h4.text-uppercase University
            %p Uncertain what to study or which university is best for you? Click the icon to find the answer for you!
    .col-md-4
      .featured-box.featured-box-quaternary.featured-box-effect-1.modules
        .box-content
          %i.icon-featured.fa.fa-car
          %h4.text-uppercase Car
          %p Coming soon!
  .distribution-map
    %img{:src => image_url("world_map.png")}
      %button.map-point{:style => "top:61%;left:76%", onmouseup: "window.location='#{url_for root_path(country: "malaysia")}';"}
        .content
          .centered-y
            %h2{style: "color:#eeeeee;"} Malaysia

= content_for :javascript do
  :javascript
    $('#country-field').selectize({
      create: true,
      sortField: 'text'
    });

    $('#house-button').click(function() {
      var country = $('#country-field option:selected').val();
      window.location = window.location.origin + "/" + country + "/houses";
    });

    $('#university-button').click(function() {
      var country = $('#country-field option:selected').val();
      window.location = window.location.origin + "/" + country;
    });