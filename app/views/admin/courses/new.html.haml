%h1 New Course for #{@university.name}

= form_for [:admin, @university, @course] do |f|
  = validation_errors @course, "course", "created"

  .form-group
    = f.label :name
    = f.text_field :name, class: "form-control"

  .form-group
    = f.label :description
    = f.text_area :description, class: "tinymce"

  .form-group
    = f.submit "Submit", class: "btn btn-primary"