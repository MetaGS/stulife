%h1 Edit #{@study_field.name}

= form_for [:admin, @study_field] do |f|
  = validation_errors @study_field, "study field", "updated"

  .form-group
    = f.label :name
    = f.text_field :name, class: "form-control"

  .form-group
    = f.label :slug
    = f.text_field :slug, class: "form-control"

  .form-group
    = f.label :description
    = f.text_area :description, class: "form-control"

  .form-grouo
    = f.submit "Submit", class: "btn btn-primary"