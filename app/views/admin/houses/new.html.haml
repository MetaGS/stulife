%h1 New House

= form_for [:admin, @house], autocomplete: :off do |f|
  = validation_errors @house, "house", "created"
  .form-group
    = f.label :country_id
    = f.select :country_id, options_for_select(Country.all.map{ |x| [x.name, x.id] }), {prompt: "Select a country"}, class: "form-control"

  .form-group
    = f.label :name
    = f.text_field :name, required: true, class: "form-control"

  .form-group
    = f.label :address
    = f.text_field :address, required: true, class: "form-control"

  .form-group
    = f.label :property_type
    = f.select :property_type, options_for_select(House::PROPERTY_TYPES), {prompt: "Select a Property Type", required: true}, class: "form-control"

  .form-group
    = f.label :latitude
    = f.text_field :latitude, required: true, class: "form-control"

  .form-group
    = f.label :longitude
    = f.text_field :longitude, required: true, class: "form-control"

  .form-group
    = f.label :description
    = f.text_area :description, class: "form-control"

  .form-group
    = f.submit "Submit", class: "btn btn-primary"